# Tools

YARN ?= yarn

# Build

.PHONY: all
all: build

.yarninstall: package.json ; $(info getting depdencies with yarn ...)   @
	$(YARN) install

	touch $@

.PHONY: build
build: .yarninstall ; $(info building Webapp plugin ...)    @
	rm -rf build

	$(YARN) run build

.PHONY: clean
clean: ; $(info cleaning identifier Webapp ...)  @
	$(YARN) cache clean

	@rm -rf build
	@rm -rf node_modules
	@rm -f .yarninstall
